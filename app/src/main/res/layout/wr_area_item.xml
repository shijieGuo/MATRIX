<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bkArea"
    android:orientation="horizontal">

<!--    <comcontrol.CPreTextView-->
<!--        android:layout_marginLeft="5px"-->
<!--        android:layout_marginRight="5px"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="2px"-->
<!--        android:background="@color/split_line2" />-->

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="@color/split_line2" />
      
        <comcontrol.CButton
            android:id="@+id/btn_item_ONOFF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:layout_gravity="center_vertical"
            android:text="OFF"
            style="@style/AllTextSize"
            android:background="@drawable/mgray_to_green_btn"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_margin="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="@color/split_line2" />

        <comcontrol.MyGainBar
            android:id="@+id/tv_item_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:background="@color/bg_color"
            android:layout_margin="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="@color/split_line2" />

        <comcontrol.CPreTextView
            android:id="@+id/tv_item_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/AllTextSize"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="01"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="@color/split_line2" />

        <comcontrol.CPreTextView
            android:id="@+id/tv_item_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.99"
            style="@style/AllTextSize"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Channel"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="@color/split_line2" />

<!--    <comcontrol.CPreTextView-->
